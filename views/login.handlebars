
<h2 class="text-center" >Login</h2>

<form class="login-form mb-1">
  <div class="mb-3">
    <label for="email-login" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email-login"
      aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-login">
  </div>

  <button type="submit" class="btn btn-secondary btn-lg btn-block">logIn</button>
</form>
<a href="/signup" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Signup Instead</a>
<script src="./js/login.js"></script>